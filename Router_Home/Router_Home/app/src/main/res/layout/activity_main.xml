<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top"
        app:menu="@menu/bottom_navigation"
        tools:visibility="visible"></com.google.android.material.bottomnavigation.BottomNavigationView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@drawable/top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp">
            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Router!"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-black"
                android:layout_marginLeft="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View routes for public transit, that fit your needs!"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp">
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/math_bg"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route Creation"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate a route for your needs!"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="15sp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="8dp"
                    android:src="@drawable/img_5"
                    android:layout_marginLeft="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/math_bg"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Access Account Information"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="15sp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="8dp"
                    android:src="@drawable/img"
                    android:layout_marginLeft="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/math_bg"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saved Routes"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View the routes you have saved!"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="15sp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:padding="8dp"
                    android:src="@drawable/img_1"
                    android:layout_marginLeft="19dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/math_bg"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate Routes"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate the quality of your route!"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="15sp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="8dp"
                    android:src="@drawable/img_3"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/math_bg"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Let others know your experience!"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="15sp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="8dp"
                    android:src="@drawable/img_2"
                    android:layout_marginLeft="9dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>